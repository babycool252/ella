{% comment %}
  Product Category Gallery Section
  Features:
  - Left side: Product category list with highlighted selected category
  - Right side: Product gallery with large images and navigation arrows
  - Responsive design with reflection effects
{% endcomment %}

<div class="product-category-gallery section-{{ section.id }}-padding" 
     data-section-id="{{ section.id }}" 
     data-section-type="product-category-gallery">
  
  <div class="page-width">
    <div class="product-category-gallery__container">
      
      <!-- Left Side: Category List -->
      <div class="product-category-gallery__categories">
        <div class="category-list">
          {% for block in section.blocks %}
            {% if block.type == 'category' %}
              <div class="category-item{% if block.settings.is_active %} category-item--active{% endif %}"
                   data-category="{{ block.settings.category_handle }}"
                   {{ block.shopify_attributes }}>
                <a href="{{ block.settings.category_link | default: '#' }}" 
                   class="category-link{% if block.settings.is_active %} category-link--active{% endif %}">
                  {{ block.settings.category_name }}
                </a>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      <!-- Right Side: Product Gallery -->
      <div class="product-category-gallery__products">
        <div class="product-gallery" data-gallery>
          
          <!-- Navigation Arrows -->
          {% if section.settings.show_navigation_arrows %}
            <button class="gallery-nav gallery-nav--prev" data-nav="prev" aria-label="Previous products">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
            <button class="gallery-nav gallery-nav--next" data-nav="next" aria-label="Next products">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          {% endif %}

          <!-- Product Slides -->
          <div class="product-slides" data-slides>
            {% for block in section.blocks %}
              {% if block.type == 'product' %}
                <div class="product-slide{% if forloop.first %} product-slide--active{% endif %}"
                     data-category="{{ block.settings.product_category }}"
                     data-slide-index="{{ forloop.index0 }}"
                     {{ block.shopify_attributes }}>
                  
                  <div class="product-item">
                    <div class="product-item__image-wrapper">
                      {% if block.settings.product_image %}
                        <img src="{{ block.settings.product_image }}"
                             alt="{{ block.settings.product_title }}"
                             class="product-item__image"
                             loading="lazy"
                             width="400"
                             height="400">
                      {% else %}
                        <div class="product-item__placeholder">
                          <svg width="100" height="100" viewBox="0 0 100 100" fill="none">
                            <rect width="100" height="100" fill="#f5f5f5"/>
                            <path d="M30 40L50 60L70 40" stroke="#ccc" stroke-width="2"/>
                          </svg>
                        </div>
                      {% endif %}
                    </div>
                    
                    <div class="product-item__info">
                      <h3 class="product-item__title">{{ block.settings.product_title }}</h3>
                      <p class="product-item__price">{{ block.settings.product_price }}</p>
                      {% if block.settings.product_description %}
                        <p class="product-item__description">{{ block.settings.product_description }}</p>
                      {% endif %}
                    </div>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>

          <!-- Dots Navigation (if enabled) -->
          {% if section.settings.show_dots %}
            <div class="gallery-dots" data-dots>
              {% assign product_count = 0 %}
              {% for block in section.blocks %}
                {% if block.type == 'product' %}
                  {% assign product_count = product_count | plus: 1 %}
                  <button class="gallery-dot{% if forloop.first %} gallery-dot--active{% endif %}"
                          data-dot-index="{{ forloop.index0 }}"
                          aria-label="Go to product {{ forloop.index }}">
                  </button>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .product-category-gallery {
    background: #ffffff;
    padding: 80px 0;
  }

  .product-category-gallery__container {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: 60px;
    align-items: start;
  }

  /* Category List Styles */
  .category-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .category-item {
    transition: all 0.3s ease;
  }

  .category-link {
    display: block;
    text-decoration: none;
    color: #333333;
    font-size: 14px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    position: relative;
  }

  .category-link--active {
    font-size: 24px;
    font-weight: 600;
    font-family: serif;
    color: #333333;
    text-transform: none;
    letter-spacing: 0;
  }

  .category-link:hover {
    color: #666666;
  }

  .category-link--active:hover {
    color: #333333;
  }

  /* Product Gallery Styles */
  .product-gallery {
    position: relative;
    overflow: hidden;
  }

  .product-slides {
    display: flex;
    transition: transform 0.5s ease;
  }

  .product-slide {
    flex: 0 0 100%;
    display: none;
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .product-slide--active {
    display: block;
    opacity: 1;
  }

  .product-item {
    text-align: center;
  }

  .product-item__image-wrapper {
    position: relative;
    margin-bottom: 20px;
  }

  .product-item__image {
    width: 100%;
    max-width: 400px;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .product-item__image:hover {
    transform: scale(1.05);
  }

  /* Reflection Effect */
  .product-item__image-wrapper::after {
    content: '';
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 20px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.3), transparent);
    border-radius: 50%;
    filter: blur(2px);
  }

  .product-item__placeholder {
    width: 100%;
    max-width: 400px;
    height: 400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
    border-radius: 8px;
  }

  .product-item__title {
    font-size: 18px;
    font-weight: 500;
    color: #333333;
    margin: 0 0 8px 0;
  }

  .product-item__price {
    font-size: 16px;
    font-weight: 600;
    color: #d4af37;
    margin: 0 0 12px 0;
  }

  .product-item__description {
    font-size: 14px;
    color: #666666;
    line-height: 1.5;
    margin: 0;
    max-width: 300px;
    margin: 0 auto;
  }

  /* Navigation Arrows */
  .gallery-nav {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #e0e0e0;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .gallery-nav:hover {
    background: #ffffff;
    border-color: #333333;
  }

  .gallery-nav--prev {
    left: 20px;
  }

  .gallery-nav--next {
    right: 20px;
  }

  .gallery-nav svg {
    width: 16px;
    height: 16px;
    color: #333333;
  }

  /* Dots Navigation */
  .gallery-dots {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin-top: 30px;
  }

  .gallery-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #e0e0e0;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .gallery-dot--active {
    background: #333333;
  }

  .gallery-dot:hover {
    background: #999999;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .product-category-gallery__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .category-list {
      flex-direction: row;
      overflow-x: auto;
      gap: 30px;
      padding-bottom: 10px;
    }

    .category-link--active {
      font-size: 20px;
    }

    .gallery-nav {
      width: 35px;
      height: 35px;
    }

    .gallery-nav--prev {
      left: 10px;
    }

    .gallery-nav--next {
      right: 10px;
    }
  }

  @media (max-width: 480px) {
    .product-category-gallery {
      padding: 40px 0;
    }

    .category-link--active {
      font-size: 18px;
    }

    .product-item__title {
      font-size: 16px;
    }

    .product-item__price {
      font-size: 14px;
    }
  }
</style>

<script>
  class ProductCategoryGallery {
    constructor(container) {
      this.container = container;
      this.slides = container.querySelectorAll('[data-slide-index]');
      this.dots = container.querySelectorAll('[data-dot-index]');
      this.navPrev = container.querySelector('[data-nav="prev"]');
      this.navNext = container.querySelector('[data-nav="next"]');
      this.categories = container.querySelectorAll('[data-category]');
      
      this.currentSlide = 0;
      this.totalSlides = this.slides.length;
      
      this.init();
    }

    init() {
      this.bindEvents();
      this.updateActiveSlide();
      this.filterProductsByCategory();
    }

    bindEvents() {
      // Navigation arrows
      if (this.navPrev) {
        this.navPrev.addEventListener('click', () => this.prevSlide());
      }
      if (this.navNext) {
        this.navNext.addEventListener('click', () => this.nextSlide());
      }

      // Dots navigation
      this.dots.forEach((dot, index) => {
        dot.addEventListener('click', () => this.goToSlide(index));
      });

      // Category filtering
      this.categories.forEach(category => {
        category.addEventListener('click', (e) => {
          e.preventDefault();
          this.filterByCategory(category.dataset.category);
        });
      });
    }

    prevSlide() {
      this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
      this.updateActiveSlide();
    }

    nextSlide() {
      this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
      this.updateActiveSlide();
    }

    goToSlide(index) {
      this.currentSlide = index;
      this.updateActiveSlide();
    }

    updateActiveSlide() {
      // Update slides
      this.slides.forEach((slide, index) => {
        slide.classList.toggle('product-slide--active', index === this.currentSlide);
      });

      // Update dots
      this.dots.forEach((dot, index) => {
        dot.classList.toggle('gallery-dot--active', index === this.currentSlide);
      });
    }

    filterByCategory(category) {
      // Update category active state
      this.container.querySelectorAll('.category-item').forEach(item => {
        item.classList.remove('category-item--active');
      });
      
      const activeCategory = this.container.querySelector(`[data-category="${category}"]`);
      if (activeCategory) {
        activeCategory.closest('.category-item').classList.add('category-item--active');
      }

      // Filter products
      this.slides.forEach(slide => {
        const slideCategory = slide.dataset.category;
        if (slideCategory === category) {
          slide.style.display = 'block';
        } else {
          slide.style.display = 'none';
        }
      });

      // Reset to first slide of category
      this.currentSlide = 0;
      this.updateActiveSlide();
    }

    filterProductsByCategory() {
      // Show only products from the active category initially
      const activeCategory = this.container.querySelector('.category-item--active');
      if (activeCategory) {
        const categoryHandle = activeCategory.querySelector('[data-category]').dataset.category;
        this.filterByCategory(categoryHandle);
      }
    }
  }

  // Initialize all product category galleries
  document.addEventListener('DOMContentLoaded', () => {
    const galleries = document.querySelectorAll('[data-section-type="product-category-gallery"]');
    galleries.forEach(gallery => {
      new ProductCategoryGallery(gallery);
    });
  });
</script>

